
<div class="order-summary jumbotron">
    <h4>Thank you for your order!  <%=@orders.email%></h4>
      <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>
        <% @orders.line_items.each do |product| %>
          <%= render 'item', product_id: product.product, quantity: product.quantity, total_price: product.total_price %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  </div>